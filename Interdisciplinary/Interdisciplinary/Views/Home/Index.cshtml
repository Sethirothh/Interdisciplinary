@model IEnumerable<Interdisciplinary.Models.Food>

@{

    ViewData["Title"] = "Home Page";
}

<div class="page">
    <section class="header">
        <div class="info">
            <div>
                <img src="~/images/shippingIcon.png" />
                <div>
                    <h5>Free Shipping</h5>
                    <p>Lorem ipsum....</p>
                </div>
            </div>
            <div>
                <img src="~/images/deliveryIcon.png" />
                <div>
                    <h5>Fast delivery</h5>
                    <p>Lorem ipsum....</p>
                </div>
            </div>
            <div>
                <img src="~/images/creditcardIcon.png" />
                <div>
                    <h5>Secure payment</h5>
                    <p>Lorem ipsum....</p>
                </div>
            </div>
        </div>
    </section>
    <section class="categories">
        <div class="vegetables">
            <h4>VEGETABLE</h4>
            <h2>GREEN FOOD</h2>
            <p>Lorem Ipsum</p>
            <a href="#">Vegetables</a>
            <img src="~/images/salat.png" />
        </div>

        <div class="fruits">
            <h4>FRUIT</h4>
            <h2>HEALTHY FOOD</h2>
            <p>Lorem Ipsum</p>
            <a href="#">Fruits</a>
            <img src="~/images/jordbær.png" />
        </div>

    </section>
    <section class="food-section">
        <div class="deal">
            <h2>Deals of the week</h2>
            <div class="cat-controller">
                <p class="controller id-0 active" onclick="toggleParentClass(0)" >All Products</p>
                <p class="controller id-1" onclick="toggleParentClass(1)">Vegetables</p>
                <p class="controller id-2" onclick="toggleParentClass(2)">Fruits</p>
            </div>
        </div>
        <div class="product-grid">
            @foreach (Food food in Model)
            {
                @await Html.PartialAsync("_ProductFood", food)
            }

        </div>
    </section>

    <section class="bottom">
        <h2>Organic fresh fruit & vegetables for your health</h2>

    </section>
</div>
